mixin bookForm(book, genre, saveUrl, cancelUrl)

    div.form-container
        form(action=saveUrl method='post')
            div.form-input
                label(for='title') Book Title
                input(id='title' name='title' value= book.title)

            div.form-input
                label(for='author') Author
                input(id='author' name='author' value= book.author)

            div.form-input
                label(for='publisher') Publisher
                input(id='publisher' name='publisher' value= book.publisher)

            div.form-input
                label(for='genre') Genre
                select(id='genre' name='genre')
                    each genre in genres
                        option(value=genre selected = (genre === book.genre)) #{genre}

            div.form-input
                label(for='pageCount') Page Count
                input(id='pageCount' name='pageCount' value= book.pageCount)

            div.form-input
                label(for='cover') Cover Image
                input(id='cover' name='cover' value= book.cover)

            div.form-input
                label(for='description') Book Description
                textarea(id='description' name='description' rows=10 cols=80) #{book.description}

            div.form-buttons
                a.button(href=cancelUrl) Cancel
                button.button(type='submit') Save