extends ../layout

block content
    h3 Books
    a(href='/books/add') Add New Book
    table
        thead
            tr
                th Book Title
                th Author
                th Publisher
                th Genre
                th Page Count
                th Cover Image
                th Description
                th
        tbody
            each book in books
                tr
                    td= book.title
                    td= book.author
                    td= book.publisher
                    td= book.genre
                    td= book.pageCount
                    td= book.cover
                    td= book.description
                    td
                        a(href=`/books/profile/${book.id}`) View Book